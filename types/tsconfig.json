{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2018",
		"outDir": "dist",
		"lib": [
			"ESNext",
			"ESNext.Array",
			"ESNext.AsyncIterable",
			"ESNext.Intl",
			"ESNext.Symbol",
			"DOM"
		],
		"removeComments": false,
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true
	},
	"baseUrl": ".",
	"paths": {
		"midnightjs": ["."]
	}
}
